@typeparam T
@inherits CustomBaseComponent
<th class="@(GetDirectionClass())" style="@(string.IsNullOrEmpty(Width) ? "": "width: " + Width) 
                                            @(string.IsNullOrEmpty(MinWidth) ? "": "min-width: " + MinWidth) 
                                            @(string.IsNullOrEmpty(MaxWidth) ? "": "max-width: " + MaxWidth)" 
                                title="@HeaderTitle">
    <div class="header-clickable-zone @(string.IsNullOrEmpty(this.Header) && this.CustomHeader == null ? "" : "with-margin")"
         @onclick="@Order">
        <span class="lib-header-grid text-no-break">

            @if (this.CustomHeader != null)
            {
                @this.CustomHeader
            }
            else
            {
                @this.Header
            }
        </span>
        @if (this.CurrentDirection.HasValue)
        {
            if (CurrentDirection == System.ComponentModel.ListSortDirection.Descending)
            {
                <i class="fas fa-caret-down"></i>
            }
            else
            {
                <i class="fas fa-caret-up"></i>
            }
        }
    </div>

</th>
